<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XAMLApp.Views.LoginView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="55">
            <Image Source="aluracar.png"></Image>
            <Label Text="LOGIN" FontSize="Medium" Margin="2,30,0,0" FontAttributes="Bold"></Label>
            <Entry Placeholder="Usuário"></Entry>
            <Entry Placeholder="Senha" IsPassword="True"></Entry>
            <Button Text="Entrar" Clicked="Button_Clicked" BackgroundColor="Blue" TextColor="White" CornerRadius="5"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>